<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/CardView.Dark"
    app:cardCornerRadius="@dimen/messageRoundCorners"
    android:minWidth="300dp"
    android:maxWidth="330dp"
    android:padding="8dp"
    android:layout_gravity="start"
    app:cardBackgroundColor="@color/messageLeftlighter">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/message_left_bg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameChatLeftTV"
            android:text="@string/sender_name"
            android:background="@drawable/message_left_bg"
            android:backgroundTint="@color/messageLeftDark"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="1"
            android:textColor="#000000"
            android:paddingVertical="3dp"
            android:alpha="0.8"
            android:elevation="1dp"
            android:fontFamily="sans-serif-light"
            android:visibility="visible"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:cardBackgroundColor="@color/messageLeftDark"
            android:layout_margin="8dp"
            android:padding="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:minWidth="300dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/row_message_topic_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:layout_height="match_parent"
                    android:text="Ellipse Line drawing algorithm"
                    android:fontFamily="sans-serif-light"
                    android:textSize="@dimen/textSize"
                    android:textColor="@color/textColorForBlackBack"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cloud"
                    android:id="@+id/row_message_pdf_button"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp"
                    android:backgroundTint="@null"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject:"
                android:textSize="@dimen/textSize"
                android:textColor="#000000"
                />
            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/row_message_subject_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Computer Graphics - UCS608"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/textSize"
                android:textColor="@color/textColorForBlackBack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc:"
                android:textSize="@dimen/textSize"
                android:textColor="#000000"
                />
            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/row_message_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perform all the Questions except Q.6 and 7. This Assignment weightage is 10 marks"
                android:lineSpacingExtra="1dp"
                android:maxLines="10"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/textSize"
                android:textColor="@color/textColorForBlackBack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline:"
                android:textSize="@dimen/textSize"
                android:textColor="#000000"
                />
            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/row_message_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 Sep 2021"
                android:lineSpacingExtra="1dp"
                android:maxLines="10"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/textSize"
                android:textColor="@color/textColorForBlackBack"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/messageLeftlighter"
            android:id="@+id/row_message_submit"
            android:layout_margin="9dp"
            android:text="Submit"
            android:backgroundTint="@color/white"
            android:foreground="?attr/selectableItemBackground"
            />

        
        

    </LinearLayout>
</androidx.cardview.widget.CardView>