<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginBottom="2dp"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    android:elevation="3dp"
    android:background="@color/ShadeMedium"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/userProfileImageAllUsers"
            android:src="@drawable/ic_baseline_person_24"
            android:background="@color/colorButtonBackground"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="@dimen/textSize"
                android:textColor="@color/textColorForBlackBack"
                android:layout_marginHorizontal="@dimen/marginBetweenText"
                android:id="@+id/userNameAllUser"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxx"
                android:textColor="@color/textColorForBlackBack"
                android:layout_marginHorizontal="@dimen/marginBetweenText"
                android:layout_marginTop="5dp"
                android:id="@+id/userBatchAllUser"
                />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>